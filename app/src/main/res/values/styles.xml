<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadlineTextViewsStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="NormalTextViewsStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="NormalEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="NormalButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="SmallButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

</resources>
