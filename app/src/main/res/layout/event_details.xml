<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/peach">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:text="Event Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/eventTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="Event Title"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="Ort"
        app:layout_constraintStart_toStartOf="@+id/eventTitle1"
        app:layout_constraintTop_toTopOf="@+id/eventTitle1" />


    <TextView
        android:id="@+id/eventStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:ems="12"
        android:gravity="center_vertical"
        android:text="Start"
        app:layout_constraintStart_toStartOf="@+id/eventLocation"
        app:layout_constraintTop_toBottomOf="@+id/eventLocation" />

    <TextView
        android:id="@+id/eventEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:ems="10"
        android:gravity="center_vertical"
        android:text="Ende"
        app:layout_constraintStart_toStartOf="@+id/eventStart"
        app:layout_constraintTop_toBottomOf="@+id/eventStart" />

    <Button
        android:id="@+id/editEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:text="Bearbeiten"
        app:layout_constraintStart_toStartOf="@+id/eventEnd"
        app:layout_constraintTop_toBottomOf="@+id/eventEnd" />

    <Button
        android:id="@+id/deleteEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LÃ¶schen"
        app:layout_constraintStart_toStartOf="@+id/editEvent"
        app:layout_constraintTop_toBottomOf="@+id/editEvent" />

</android.support.constraint.ConstraintLayout>