<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/room_name"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:layout_marginStart="132dp"
        android:theme="@style/AppTheme"
        android:hint="@string/hint_create_room"
        app:layout_constraintBottom_toTopOf="@+id/addChatroom"
        app:layout_constraintStart_toStartOf="@+id/addChatroom" />

    <Button
        android:id="@+id/addChatroom"
        android:layout_width="124dp"
        android:layout_height="39dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="@+id/room_name"
        app:layout_constraintStart_toStartOf="@+id/room_name" />
</android.support.constraint.ConstraintLayout>