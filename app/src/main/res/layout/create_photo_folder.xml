<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headlineGallery2"
        android:layout_width="251dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="40dp"
        android:text="Erstelle neues Album"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/createNewFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="193dp"
        android:layout_marginBottom="138dp"
        android:text="Erstellen"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/cancleNewFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="137dp"
        android:text="Abbrechen"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="353dp" />

    <EditText
        android:id="@+id/newFolderName"
        android:layout_width="251dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/headlineGallery2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="200dp"
        android:text=""
        android:textSize="14sp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="353dp" />

    <TextView
        android:id="@+id/textViewAlbumName"
        android:layout_width="185dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/newFolderName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="154dp"
        android:text="Name des neuen Albums" />

</RelativeLayout>