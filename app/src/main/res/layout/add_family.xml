<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="330dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325">

        <TableRow>

            <TextView
                style="@style/HeadlineTextViewsStyle"
                android:id="@+id/familyNameLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_marginEnd="15dp"
                android:text="@string/add_family_name" />


            <EditText
                style="@style/NormalEditTextStyle"
                android:id="@+id/familyNameTextfield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:textSize="14sp"
                android:inputType="text"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/memberLable"
                style="@style/HeadlineTextViewsStyle"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:gravity="center|start"
                android:minLines="4"
                android:text="@string/add_family_members" />


            <EditText
                style="@style/NormalEditTextStyle"
                android:id="@+id/familyMemberTextfield"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:minLines="4"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799">

        <TableRow>

            <Button
                android:id="@+id/cancleAddFamilyButton"
                style="@style/NormalButtonStyle"
                android:layout_width="wrap_content"
                android:layout_marginEnd="25dp"
                android:text="@string/cancle_button" />

            <Button
                android:id="@+id/createFamilyButton"
                style="@style/NormalButtonStyle"
                android:layout_width="wrap_content"
                android:text="@string/create_button" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>